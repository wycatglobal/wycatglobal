<div class="bg-color">
	<div class="container">

		<br/>

		<div class="wrapper-bc">
			<section class="header-bc">

  				<div class="logo-and-nav-wrap">
			
					<div class="site-nav-wrap">
         				<nav class="nav-bc">
					
							<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc"><a href="/">Home</a></span>
							</div>
							<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc"><%= link_to 'Albums', albums_path %></span>
							</div>							
           					<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc">Add Image</span>
							</div>							
						</nav>
					</div>
				</div>
			</section>
  		</div>		
		<br/>		

		<% if @albums.exists? %>

			<%= form_for @image, :html => {:multipart => true} do |f| %>

				<div class="form-group row">
					<%= f.label "Image_title:" %>
					<div class="col-10">
						<%= f.text_field :image_title %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label "Album:" %>
					<div class="col-10">
						<%= f.select :album_id, Album.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'} %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label "Image_description:" %>
					<div class="col-10">
						<%= f.text_area :image_description %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label "Image:" %>
					<div class="col-10">
						<%= f.file_field :image %>
					</div>
				</div>

				<div class="form-group row">
					<div class="col-10">
						<%= f.submit "Submit", class: "btn btn-primary" %>
					</div>
				</div>
				<br/>
				<br/>
			<% end %>
		<% else %>
			<%= link_to "Add Album", new_album_path%>
		<% end %>
	</div>
</div>