<% provide(:events_active, 'active') %>

<div class="bg-color">
	<%= render 'eventsnav' %>
	<div class="container">
		<br/>

		<div class="wrapper-bc">
			<section class="header-bc">

  				<div class="logo-and-nav-wrap">
			
					<div class="site-nav-wrap">
         				<nav class="nav-bc">
					
							<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc"><a href="/">Home</a></span>
							</div>
           					<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc">Events</span>
							</div>							
						</nav>
					</div>
				</div>
			</section>
  		</div>			
		<br />

		<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
	  		<li class="nav-item">
	    		<a class="nav-link active" id="pills-upcoming-tab" data-toggle="pill" href="#pills-upcoming" role="tab" aria-controls="pills-upcoming" aria-selected="true">Upcoming</a>
	  		</li>
	  		<li class="nav-item">
	    		<a class="nav-link" id="pills-past-tab" data-toggle="pill" href="#pills-past" role="tab" aria-controls="pills-past" aria-selected="false">Past</a>
	  		</li>
		</ul>
		
		<div class="tab-content" id="pills-tabContent">
	  		<div class="tab-pane fade show active" id="pills-upcoming" role="tabpanel" aria-labelledby="pills-upcoming-tab">
	  			<% @events.each do |event| %>
	  				<% if event.event_date >= Date.today %>
	  					<div class="container">
					    	<section class="event-calendar">
					          	<section class="result-card result-card__event">
					            	<div class="result-card__slide-container">
					              		<div class="result-card__date-wrapper">
							                <p class="result-card__event-date"><%= event.event_date.strftime("%b %d") %></p>
					                		<p class="result-card__time" style="line-height: 5;"><%= event.event_time.strftime("%I:%M %p") %></p>
					              		</div>
					              		<p class="result-card__event-issue">India</p>
					              		<div class="result-card__info-wrapper">
					                		<%= link_to event.event_title, event, :style => 'text-decoration: none;', :class => "result-card__title" %>
					                		<div class="result-card__details-wrapper">
					                  			<p class="result-card__place">
					                    			<span><%= event.event_location %></span>
					                  			</p>
					                  			<div class="result-card__keynote-wrapper">                           
					                      			<div class="result-card__keynote-eyebrow"></div>
					                      			<div class="result-card__keynote-speakers"></div>
					                  			</div>
					                		</div>
					              		</div>
					            	</div>
					          	</section>
					      	</section>
					  	</div>
					<% end %>
				<% end %>	  
			</div>
	  		
	  		<div class="tab-pane fade" id="pills-past" role="tabpanel" aria-labelledby="pills-past-tab">
	  	  		<% @events.each do |event| %>
	  				<% if event.event_date < Date.today %>
	  					<div class="container">
					    	<section class="event-calendar">
					          	<section class="result-card result-card__event">
					            	<div class="result-card__slide-container">
					              		<div class="result-card__date-wrapper">
							                <p class="result-card__event-date"><%= event.event_date.strftime("%b %d") %></p>
					                		<p class="result-card__time" style="line-height: 5;"><%= event.event_time.strftime("%I:%M %p") %></p>
					              		</div>
					              		<p class="result-card__event-issue">India</p>
					              		<div class="result-card__info-wrapper">
					                		<%= link_to event.event_title, event, :style => 'text-decoration: none;', :class => "result-card__title" %>
					                		<div class="result-card__details-wrapper">
					                  			<p class="result-card__place">
					                    			<span><%= event.event_location %></span>
					                  			</p>
					                  			<div class="result-card__keynote-wrapper">                           
					                      			<div class="result-card__keynote-eyebrow"></div>
					                      			<div class="result-card__keynote-speakers"></div>
					                  			</div>
					                		</div>
					              		</div>
					            	</div>
					          	</section>
					      	</section>
					  	</div>
					<% end %>
				<% end %>
	  		</div>
		</div>
	</div>
	<br/>
</div>

