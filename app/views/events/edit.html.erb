<h1>Events#edit</h1>
<p>Find me in app/views/events/edit.html.erb</p>

<div class="container">
	<%= form_for @event, :html => {:multipart => true} do |f| %>

	<div class="form-group">
		<%= f.label :event_title %>
		<%= f.text_field :event_title %>
	</div>

	<div class="form-group">
		<%= f.label :event_body %>
		<%= f.text_field :event_body %>	
	</div>
		
	<div class="form-group">
		<%= f.label :event_date %>
		<%= f.text_field :event_date %>
	</div>

	<div class="form-group">
		<%= f.label :event_time %>
		<%= f.time_select :event_time %>
	</div>

	<div class="form-group">
		<%= f.label :event_location %>
		<%= f.text_field :event_location %>	
	</div>

		<%= f.submit "Submit"%>
	<% end %>
</div>