<div class="bg-color">
	<div class="container">
		<br/>

		<div class="wrapper-bc">
			<section class="header-bc">

  				<div class="logo-and-nav-wrap">
			
					<div class="site-nav-wrap">
         				<nav class="nav-bc">
					
							<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc"><a href="/">Home</a></span>
							</div>
							<div class="single-breadcrumb-wrap">
								<span class="sep">
									<i class="fa fa-caret-right"></i>
								</span>
								<%= link_to 'Albums', albums_path, :class => "breadcrumb-bc" %>
							</div>
							<div class="single-breadcrumb-wrap">
								<span class="sep">
									<i class="fa fa-caret-right"></i>
								</span>
								<%= link_to @album.name, album_path(@album.id), :class => "breadcrumb-bc" %>
							</div>					
           					<div class="single-breadcrumb-wrap">
								<span class="sep"><i class="fa fa-caret-right"></i></span> <span class="breadcrumb-bc">Edit</span>
							</div>
						</nav>
					</div>
				</div>
			</section>
  		</div>

  		<br/>
  		<h2>Edit <%= @album.name %></h2>
		<%= form_for @album do |f| %>
		<br/>
			<% if @album.errors.any? %>
			    <% @album.errors.full_messages.each do |msg| %>
			    	<div class="alert alert-danger"><%= msg %></div>
			    <% end %>
			<% end %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class:"form-control" %>
			</div>

		    <div class="form-group">
		     	<%= f.label :description %>
				<%= f.text_field :description, class:"form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :cover_image %>
				<%= f.file_field :cover_image %>
			</div>
			
			<div class="form-group">
				<% if @album.cover_image.present? %>
		            <%= (image_tag @album.cover_image.url, style: 'height: 210px; display: block;') %>
				<% else %>
		            <p>There are no images!</p>
				<% end %>
			</div>

			
			<%= f.submit "Submit", class:"btn btn-primary" %>
			<%= link_to "Cancel", album_path, class:"btn btn-primary" %>
			<br/>
			<br/>
			<br/>
			<br/>
			<br/>
		<% end %>

		<div id="edit_images">
			<% if @images.exists? %>
				<% @images.each_slice(4) do |image| %>
					<div class="row">
						<% image.each do |img| %>
							<div class="col-md-3" style="margin-bottom: 20px;">
								<%= image_tag img.image.url, :style => 'height: 250px;width:100%;' %>
								<center>
									<%= link_to "Edit", edit_image_path(img.id), :style => 'text-decoration: none;' %>
										<%= link_to "Delete", image_path(img), :class => 'delete',method: :delete, :style => 'text-decoration: none;',data: { confirm: "Are you sure?" } %>
								</center>
							</div>
						<% end %>
					</div>
				<% end %>
			<% end %>
		</div>
		<br/>
	</div>
</div>