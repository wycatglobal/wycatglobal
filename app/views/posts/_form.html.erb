        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="field">
        <%= form.label 'Tags' %>
        <%= form.text_area :tag_list %>
      </div>

      <div class="field">
        <%= form.label "Cover Image" %>
        <%= form.file_field :cover_image %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
      <br/>
    <% end %>
  </div>
